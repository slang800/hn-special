{
  "name": "hn-special",
  "description": "Refreshes the style of Hacker News and adds a few features, like infinite scrolling. Everything is toggleable.",
  "version": "1.4.4",
  "author": "Sean Lang <slang800@gmail.com>",
  "devDependencies": {
    "jpm": "^1.0.6",
    "stylus": "^0.54.2",
    "svgexport": "^0.3.0"
  },
  "engines": {
    "firefox": ">=38.0"
  },
  "license": "GPL-3.0",
  "main": "index.js",
  "preferences": [
    {
      "name": "theme",
      "title": "Theme",
      "type": "menulist",
      "value": "light",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "high-contrast",
          "label": "High Contrast"
        }
      ]
    },
    {
      "name": "grayVisitedLinks",
      "title": "Gray Visited Links",
      "type": "bool",
      "value": true
    },
    {
      "name": "infiniteScrolling",
      "title": "Infinite Scrolling",
      "type": "bool",
      "value": true
    },
    {
      "name": "openLinksInNewTabs",
      "title": "Open Links In New Tabs",
      "type": "bool",
      "value": false
    },
    {
      "name": "accurateDomainNames",
      "title": "Accurate Domain Names",
      "type": "bool",
      "value": true
    },
    {
      "name": "foldComments",
      "title": "Fold Comments",
      "type": "bool",
      "value": true,
      "description": "Adds a button to expand or collapse comments and their children"
    },
    {
      "name": "stickyHeader",
      "title": "Sticky Header",
      "type": "bool",
      "value": false,
      "description": "Keep the header at the top of the page while scrolling"
    },
    {
      "name": "userTooltips",
      "title": "User Tooltips",
      "type": "bool",
      "value": false,
      "description": "Show user stats when you mouse-over their name"
    },
    {
      "name": "removeSearchBar",
      "title": "Remove Search Bar",
      "type": "bool",
      "value": true
    }
  ],
  "title": "HN Special"
}

// Fixed header
.hnspecial-message-container
  padding-top 15px
  padding-bottom 5px

body > center > table > tbody > tr:first-child
  height: (30px + (20px * 2))

  > td
    position fixed
    top 0
    left 0
    width 100%
    z-index 10 // Must be the topmost element on the page

    > table
      max-width 900px
      margin 0 auto
